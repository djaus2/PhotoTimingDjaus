<Window x:Class="VideoStitcherGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Stitcher" Height="600" Width="800">
    <Grid>
        <!-- Input Fields -->
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Video Path:" />
            <TextBox Name="VideoPathInput" Width="500" Margin="0,0,0,10" Text= "C:\Users\david\OneDrive\Documents\Camtasia\MVP-Renewal-Reviewe\MVP-Renewal-Review.mp4" />

            <TextBlock Text="Output Path:" />
            <TextBox Name="OutputPathInput" Width="500" Margin="0,0,0,10" Text="C:temp\vid\try.png" />

            <TextBlock Text="Start Time (Seconds):" />
            <TextBox Name="StartTimeInput" Width="200" Margin="0,0,0,20" Text="0" />

            <Button Name="StitchButton" Content="Stitch Video" Width="200" Click="StitchButton_Click" />

            <!-- Image Display -->
            <ScrollViewer Name="ImageScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                <Image Name="StitchedImage" />
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>