<Window x:Class="VideoStitcherGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Stitcher" Height="600" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

        <Grid>

            <!-- Input Fields -->
            <StackPanel Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="20">
                    <TextBlock Text="Video Path:" HorizontalAlignment="Left" />
                    <TextBox Name="VideoPathInput" HorizontalAlignment="Left" Width="600" Margin="10,0,0,0" Text= "C:\Users\david\OneDrive\Documents\Camtasia\MVP-Renewal-Reviewe\MVP-Renewal-Review.mp4" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="40">
                    <TextBlock Text="Output Path:" Margin="10,0,0,0" VerticalAlignment="Center" />
                    <TextBox Name="OutputPathInput" Width="150" Margin="10,0,0,0" VerticalAlignment="Center" Text="C:\temp\vid\try.png" />
                    <TextBlock Text="Start Time (Seconds):" Margin="10,0,0,0" VerticalAlignment="Center" />
                    <TextBox Name="StartTimeInput" Width="150" Margin="10,0,0,0" VerticalAlignment="Center" Text="0" />
                    <Button Name="StitchButton" Content="Stitch Video" Width="150" Click="StitchButton_Click" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <ProgressBar Name="BusyIndicator" Height="20" Width="150" IsIndeterminate="True" Visibility="Collapsed" Margin="10,0,0,0" VerticalAlignment="Center" />
                    <TextBlock Name="FinishTime" Text="Finish Time: " Margin="10,0,0,0" VerticalAlignment="Center" />
                    <TextBox Name="FinishTimeLabel" Width="150" Margin="10,0,0,0" VerticalAlignment="Center" Text="" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="40" >

                    <TextBlock Text="Zoom:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Slider Name="ZoomSlider" Width="200" Minimum="1" Maximum="5" Value="1" Margin="10,0,0,0" VerticalAlignment="Center" ValueChanged="ZoomSlider_ValueChanged" />

                    <TextBlock Text="Horizontal Scaling:" Margin="0,10,0,5" VerticalAlignment="Center" />
                    <Slider Name="HorizontalSlider" Width="200" Minimum="0.5" Maximum="3" Value="1" Margin="10,0,0,0" VerticalAlignment="Center" ValueChanged="HorizontalSlider_ValueChanged" />

                    <TextBlock Text="Vertical Scaling:" Margin="0,10,0,5" VerticalAlignment="Center" />
                    <Slider Name="VerticalSlider" Width="200" Minimum="0.5" Maximum="3" Value="1" Margin="10,0,0,0" VerticalAlignment="Center" ValueChanged="VerticalSlider_ValueChanged" />
                </StackPanel>


                <!-- Image Display -->
                <ScrollViewer Name="ImageScrollViewer" 
                HorizontalScrollBarVisibility="Auto" 
                VerticalScrollBarVisibility="Visible" 
                PanningMode="Both" 
                PanningDeceleration="0.001" 
                PanningRatio="0.5" 
                Margin="0,20,0,0">
                    <Canvas Name="OverlayCanvas" Height="800">
                        <Image Name="StitchedImage" Stretch="None"
                    MouseLeftButtonDown="StitchedImage_MouseLeftButtonDown"
                    MouseMove="StitchedImage_MouseMove"
                    MouseLeftButtonUp="StitchedImage_MouseLeftButtonUp" />
                        <Line Name="VerticalLine" Stroke="Red" StrokeThickness="2" Visibility="Collapsed" />
                        <TextBlock Name="TimeLabel" Background="Yellow" Foreground="Black" Visibility="Collapsed" />
                    </Canvas>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>