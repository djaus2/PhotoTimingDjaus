<UserControl x:Class="GetVideoWPFLib.Controls.VideoDownloadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:GetVideoWPFLib"
             xmlns:viewmodels="clr-namespace:GetVideoWPFLib.ViewModels"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Inverse Boolean Converter -->
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <!-- Bool to Listening Status Converter -->
        <conv:BoolToListeningStatusConverter x:Key="BoolToListeningStatusConverter"/>
        
        <!-- Spinning Animation for Busy Indicator -->
        <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                From="0" To="360" Duration="0:0:2"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Settings -->
        <GroupBox Header="Connection Settings" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Local IP:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBlock Text="{Binding LocalIpAddress}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" FontFamily="Consolas" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                    <Button x:Name="BackButton" Width="100" Content="Back" Command="{Binding BackFromDownloadCommand}" Margin="0,0,10,0" Padding="10,5" ToolTip="Back but leave listening" />
                    <Button x:Name="CloseButton" Width="100" Content="Close" Command="{Binding CloseDownloadCommand}" Margin="0,0,10,0" Padding="10,5" ToolTip="Close and stop listening"/>
                </StackPanel>
                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Text="{Binding Port}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="100" HorizontalAlignment="Left" Margin="0,0,0,5"/>

                <TextBlock Text="Download Folder:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Text="{Binding DownloadFolder}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
                    <Button x:Name="SelectButton" Width="100" Content="Select..." Margin="0,0,10,0" Padding="10,5" ToolTip="Select a download folder"/>
                    <Button x:Name="BrowseButton" Width="100" Content="Browse" Command="{Binding OpenDownloadFolderCommand}" Margin="0,0,10,0" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Listening Control -->
        <GroupBox Header="Listening Control" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Width="100" Content="Start Listening" Command="{Binding StartListeningCommand}" Margin="0,0,10,0" Padding="10,5" IsEnabled="{Binding IsListening, Converter={StaticResource InverseBooleanConverter}}"/>
                <Button Width="100" Content="Stop Listening" Command="{Binding StopListeningCommand}" Margin="0,0,10,0" Padding="10,5" IsEnabled="{Binding IsListening}"/>
                <TextBlock Text="Status: " VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBlock Text="{Binding IsListening, Converter={StaticResource BoolToListeningStatusConverter}}" VerticalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>

        <!-- Downloaded Files -->
        <GroupBox Header="Downloaded Files" Grid.Row="2" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="FileList"
         Grid.Row="0"
         ItemsSource="{Binding DownloadedFiles}"
         SelectedItem="{Binding SelectedDownloadedFile, Mode=TwoWay}"
         SelectionMode="Single"
         Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="Consolas"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                    <Button Width="100" Content="Refresh Files"   Command="{Binding RefreshDownloadedFilesCommand}"  Margin="0,0,10,0" Padding="10,5"/>
                    <Button Width="100" Content="Clear Files"     Command="{Binding ClearDownloadedFilesCommand}"  Margin="0,0,10,0" Padding="10,5"/>
                    <Button Width="100" Content="Stitch Selected" Command="{Binding BackFromDownloadAndStitchCommand}" Margin="0,0,10,0" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    
        <!-- Video Download Busy Indicator Overlay -->
        <Grid x:Name="PopUp" Grid.RowSpan="4" Background="#80000000" Visibility = "{Binding IsVideoDownloading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="1000">
            <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <!-- Spinning Circle -->
                    <Ellipse Width="60" Height="60" Margin="0,0,0,15">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF4CAF50" Offset="0"/>
                                <GradientStop Color="#FF2196F3" Offset="0.5"/>
                                <GradientStop Color="#FFFF9800" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="30" CenterY="30"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinAnimation}"/>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    
                    <!-- Download Icon -->
                    <TextBlock Text="ðŸ“¥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    
                    <!-- Status Text -->
                    <TextBlock Text="Video Download in Progress..." FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentDownloadFile}" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10" FontStyle="Italic"/>
                    <TextBlock Text="Please wait..." FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
