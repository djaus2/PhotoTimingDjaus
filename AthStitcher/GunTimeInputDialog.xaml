<Window x:Class="AthStitcherGUI.GunTimeInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Gun Time" Height="150" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Enter Gun Time (seconds.milliseconds):" Margin="0,0,0,10" />
        <TextBox Name="GunTimeTextBox" Width="200" Height="25" Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OkButton_Click" />
            <Button Content="Cancel" Width="60" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>