<Window x:Class="AthStitcher.Views.ManageMeetsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Meets" Height="420" Width="720"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Width="90" Content="Done" Click="Done_Click" IsDefault="True"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button Width="90" Content="Add" Click="Add_Click"/>
            <TextBlock Margin="12,0,12,0" VerticalAlignment="Center" Text="Double-click a row to edit" Foreground="Gray"/>
            <Button Width="150" x:Name="btnSendFiltered" Content="Send Selected Meets" Click="ExportMeetsAsCsv_Click" Margin="5,0,5,0"/>
            <Button Width="150" x:Name="btnSendAll" Content="Send All Meets" Click="ExportMeetsAsCsv_Click"/>

        </StackPanel>
        <!-- Filters row -->
        <Grid DockPanel.Dock="Top" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="140"/>
                <!-- actions spacer to align -->
            </Grid.ColumnDefinitions>
            <TextBox x:Name="DescriptionFilter" Grid.Column="0" Margin="0,0,8,0"
                     ToolTip="Filter description" TextChanged="Filter_TextChanged"/>
            <TextBox x:Name="RoundFilter" Grid.Column="1" Margin="0,0,8,0"
                     ToolTip="Filter round" TextChanged="Filter_TextChanged"/>
            <TextBox x:Name="DateFilter" Grid.Column="2" Margin="0,0,8,0"
                     ToolTip="Filter date (yyyy-mm-dd)" TextChanged="Filter_TextChanged"/>
            <TextBox x:Name="LocationFilter" Grid.Column="3"
                     ToolTip="Filter location" TextChanged="Filter_TextChanged"/>
            <TextBlock Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Run Text="&#x2190; "/>
                <Bold>Filter</Bold>
            </TextBlock>
        </Grid>
        <DataGrid x:Name="MeetsGrid" Margin="8" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="True"
                  MouseDoubleClick="MeetsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200" SortMemberPath="Description"/>
                <!-- DataGridTextColumn Header="Round" Binding="{Binding Round}" Width="50" SortMemberPath="Round"  / -->
                <DataGridTextColumn Header="Round" Binding="{Binding Round}" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="120" SortMemberPath="Date"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="160" SortMemberPath="Location"/>
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Margin="0,0,8,0" Width="56" Content="Edit" Click="EditRow_Click"/>
                                <Button Width="64" Content="Delete" Click="DeleteRow_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
