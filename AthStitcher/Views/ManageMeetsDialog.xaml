<Window x:Class="AthStitcher.Views.ManageMeetsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Meets" Height="420" Width="720"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Width="90" Content="Done" Click="Done_Click" IsDefault="True"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button Width="90" Content="Add" Click="Add_Click"/>
            <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="Double-click a row to edit" Foreground="Gray"/>
        </StackPanel>
        <!-- Filters row -->
        <Grid DockPanel.Dock="Top" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="140"/> <!-- actions spacer to align -->
            </Grid.ColumnDefinitions>
            <TextBox x:Name="DescriptionFilter" Grid.Column="0" Margin="0,0,8,0"
                     ToolTip="Filter description" TextChanged="Filter_TextChanged"/>
            <TextBox x:Name="DateFilter" Grid.Column="1" Margin="0,0,8,0"
                     ToolTip="Filter date (yyyy-mm-dd)" TextChanged="Filter_TextChanged"/>
            <TextBox x:Name="LocationFilter" Grid.Column="2"
                     ToolTip="Filter location" TextChanged="Filter_TextChanged"/>
            <TextBlock Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Run Text="&#x2190; "/>
                <Bold>Filter</Bold>
            </TextBlock>
        </Grid>
        <DataGrid x:Name="MeetsGrid" Margin="8" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="True"
                  MouseDoubleClick="MeetsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" SortMemberPath="Description"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="150" SortMemberPath="Date"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="200" SortMemberPath="Location"/>
                <DataGridTemplateColumn Header="Actions" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Margin="0,0,8,0" Width="56" Content="Edit" Click="EditRow_Click"/>
                                <Button Width="64" Content="Delete" Click="DeleteRow_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
