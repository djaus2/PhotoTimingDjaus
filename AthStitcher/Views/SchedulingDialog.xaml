<Window x:Class="AthStitcher.Views.SchedulingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Settings" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <TextBlock TextWrapping="Wrap" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
  <Run Text=""/><Bold>About App Cut Offs</Bold><LineBreak/>
  <Run Text="- "/><Bold>Meet Cut Off: </Bold>The minimum number of days before a Meet, it needs to be created.<LineBreak/>
  <Run Text="- "/><Bold>Event Cut Off: </Bold>The number of days before a Meet after which <Bold><Italic>Events</Italic></Bold> can't be added.<LineBreak/>
  <Run Text=""/>... Must be less than or equal to Meet Cut Off days.
        </TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Set Meet Cutoff (days): "/>
        <!--TextBox x:Name="MeetCutoffBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" Text="0"/ -->
        <xctk:IntegerUpDown Minimum="0"
    HorizontalAlignment="Left"
    x:Name="MeetCutoffBox"
    Grid.Row="1" Grid.Column="1"
    Value="{Binding MeetCutoff, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    FormatString="F0"
    AllowSpin="True"
    ClipValueToMinMax="True"
    Width="50"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" HorizontalAlignment="Right" VerticalAlignment="Center"><Run Text="Set Event Cutoff (days): "/></TextBlock>
        <!--TextBox x:Name="EventCutoffBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" Text="0"/-->
        <xctk:IntegerUpDown Minimum="0"
    HorizontalAlignment="Left"
    x:Name="EventCutoffBox"
    Grid.Row="2" Grid.Column="1"
    Value="{Binding EventCutoff, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Maximum="{Binding MeetCutoff}"
    FormatString="F0"
    AllowSpin="True"
    ClipValueToMinMax="True"
    Width="50"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right"><Run Text="... after Meet Date"/><Run Text=":"/></TextBlock>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">App Icon:</TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,8,8" HorizontalAlignment="Left" Width="190"
            VerticalAlignment="Center"      
            Text="{Binding AppIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">Info Link:</TextBlock>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="0,0,8,8" HorizontalAlignment="Left" Width="190"
            VerticalAlignment="Center"      
            Text="{Binding InfoLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


        <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">Info Link Text:</TextBlock>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="0,0,8,8" HorizontalAlignment="Left" Width="190"
            VerticalAlignment="Center"      
            Text="{Binding InfoLinkText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


        <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">AGitHub Link:</TextBlock>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="0,0,8,8" HorizontalAlignment="Left" Width="190"
            VerticalAlignment="Center"      
            Text="{Binding GitHubLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="8" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">GitHub Link Text:</TextBlock>
        <TextBox Grid.Row="8" Grid.Column="1" Margin="0,0,8,8" HorizontalAlignment="Left" Width="190"
            VerticalAlignment="Center"      
            Text="{Binding GitHubLinkText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="9" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">Import Event Properties Header:</TextBlock>
        <TextBox Grid.Row="9" Grid.Column="1" Margin="0,0,8,8" HorizontalAlignment="Left" Width="290"
            VerticalAlignment="Center"      
            Text="{Binding ImportEventHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="10" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" HorizontalAlignment="Right">Number of Required Event Properties:</TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="10" Grid.Column="1">
        <xctk:IntegerUpDown Minimum="0"
            HorizontalAlignment="Left"
            x:Name="NumRequiredEventProps"
            Value="{Binding NumRequiredEventProps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            FormatString="F0"
            AllowSpin="True"
            ClipValueToMinMax="True"
            Width="50"/>
            <TextBlock Padding="5,0,0,0" VerticalAlignment="Center" FontStyle="Italic">From Event Properties from left.</TextBlock>
        </StackPanel>

        <CheckBox x:Name="CanAddHeatsOnDay" Grid.Row="11" Grid.ColumnSpan="2" Content="Allow adding heats on day of Meet"/>

        <Button Grid.Row="12" Grid.Column="0" HorizontalAlignment="Left" Width="80" Margin="0,0,8,0" Content="OK" IsDefault="True" Click="Ok_Click"/>
        <Button Grid.Row="12" Grid.Column="1" HorizontalAlignment="Right" Width="80" Content="Cancel" IsCancel="True"/>
    </Grid>
</Window>
