<Window x:Class="AthStitcher.Views.NetworkSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Settings"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MinWidth="380"
        MinHeight="170">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Host / IP:" Margin="0,6,6,6"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,6,0,6"
                 Text="{Binding TargetHostOrIp, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Port:" Margin="0,6,6,6"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,6,0,6"
                 Text="{Binding TargetPort, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Connect timeout (ms):" Margin="0,6,6,6"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,6,0,6"
                 Text="{Binding ConnectTimeoutMs, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="84" Margin="6,0,0,0" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Width="84" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>