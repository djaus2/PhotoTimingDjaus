<Window x:Class="VideoStitcherGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Stitcher" Height="600" Width="800">
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10" Panel.ZIndex="1">

            <TextBlock Text="Video Path:" />
            <TextBox Name="VideoPathInput" Width="500" Margin="0,0,0,10" Text="C:\Users\david\OneDrive\Documents\Camtasia\MVPRenewal2\MVPRenewal2.mp4" />

            <TextBlock Text="Output Path:" />
            <TextBox Name="OutputPathInput" Width="500" Margin="0,0,0,10" Text="c:\temp\vid\stitched_image.png" />

            <TextBlock Text="Start Time (Seconds):" />
            <TextBox Name="StartTimeInput" Width="200" Margin="0,0,0,20" Text="00" />

            <Button Name="StitchButton" Content="Stitch Video" Width="200" Click="StitchButton_Click" IsEnabled="True" />

            <TextBlock Text="Zoom:" Margin="0,20,0,5" />
            <Slider Name="ZoomSlider" Minimum="1" Maximum="5" Value="1" Margin="0,0,0,10" ValueChanged="ZoomSlider_ValueChanged" />

            <TextBlock Text="Horizontal Scaling:" Margin="0,10,0,5" />
            <Slider Name="HorizontalSlider" Minimum="0.5" Maximum="3" Value="1" Margin="0,0,0,10" ValueChanged="HorizontalSlider_ValueChanged" />

            <TextBlock Text="Vertical Scaling:" Margin="0,10,0,5" />
            <Slider Name="VerticalSlider" Minimum="0.5" Maximum="3" Value="1" Margin="0,0,0,10" ValueChanged="VerticalSlider_ValueChanged" />
            <!-- Busy Indicator -->
            <ProgressBar Name="BusyIndicator" Height="20" IsIndeterminate="True" Visibility="Collapsed" Margin="0,20,0,0" />

            <!-- ScrollViewer for Image -->
            <ScrollViewer Name="ImageScrollViewer" 
                    Panel.ZIndex="0"
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Auto" 
            PanningMode="Both" 
            PanningDeceleration="0.001" 
            PanningRatio="0.5" 
            Margin="0,20,0,0">
                <Canvas Name="OverlayCanvas">
                    <Image Name="StitchedImage" Stretch="None"
                    MouseLeftButtonDown="StitchedImage_MouseLeftButtonDown"
                    MouseMove="StitchedImage_MouseMove"
                    MouseLeftButtonUp="StitchedImage_MouseLeftButtonUp" />
                    <Line Name="VerticalLine" Stroke="Red" StrokeThickness="2" Visibility="Collapsed" />
                    <TextBlock Name="TimeLabel" Background="White" Foreground="Black" Visibility="Collapsed" />
                </Canvas>
            </ScrollViewer>
 
        </StackPanel>
    </Grid>
</Window>